@page
@model PersonnelShiftSystem.Web.Pages.Teams.TeamListModel
@{
    ViewData["Title"] = "Takımları Listele";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<!--begin::Toolbar-->
<div id="kt_app_toolbar" class="app-toolbar align-items-center justify-content-between py-4 py-lg-6">
    <!--begin::Toolbar wrapper-->
    <div class="d-flex flex-grow-1 flex-stack flex-wrap gap-2" id="kt_toolbar">
        <!--begin::Page title-->
        <div class="d-flex flex-column align-items-start me-3 gap-1 gap-lg-2">
            <!--begin::Title-->
            <h1 class="d-flex text-gray-900 fw-bold m-0 fs-3">Takımları Listele</h1>
            <!--end::Title-->
            <!--begin::Breadcrumb-->
            <ul class="breadcrumb breadcrumb-dot fw-semibold text-gray-600 fs-7">
                <!--begin::Item-->
                <li class="breadcrumb-item text-gray-600">
                    <a href="/Dashboard" class="text-gray-600 text-hover-primary">Anasayfa</a>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item text-gray-600">Takımları Listele</li>
                <!--end::Item-->
            </ul>
            <!--end::Breadcrumb-->
        </div>
        <!--end::Page title-->
    </div>
    <!--end::Toolbar wrapper-->
</div>
<!--end::Toolbar-->

<div id="kt_app_content" class="app-content flex-column-fluid">
    <!--begin::Products-->
    <div class="card card-flush">
        <!--begin::Card header-->
        <div class="card-header align-items-center py-5 gap-2 gap-md-5">
            <!--begin::Card title-->
            <div class="card-title">
                <!--begin::Search-->
                <div class="d-flex align-items-center position-relative my-1">
                    <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-4">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
                    <input type="text" data-kt-ecommerce-product-filter="search" class="form-control form-control-solid w-250px ps-12" placeholder="Takım Ara">
                </div>
                <!--end::Search-->
            </div>
            <!--end::Card title-->
            <!--begin::Card toolbar-->
            <div class="card-toolbar flex-row-fluid justify-content-end gap-5">
                <div class="w-100 mw-150px">
                </div>
                <!--begin::Add product-->
                <form method="post">
                    <input type="submit" class="btn btn-primary" value="Takım Oluştur" asp-page="TeamList" asp-page-handler="AddTeam">
                </form>
                <!--end::Add product-->
            </div>
            <!--end::Card toolbar-->
        </div>
        <!--end::Card header-->
        <!--begin::Card body-->
        <div class="card-body pt-0">
            <!--begin::Table-->
            <div id="kt_ecommerce_products_table_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                <div class="table-responsive">
                    <table class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer" id="kt_ecommerce_products_table">
                        <thead>
                            <tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
                                @* 								<th class="w-10px pe-2 sorting_disabled" rowspan="1" colspan="1" aria-label="" style="width: 29.8906px;">
                                <div class="form-check form-check-sm form-check-custom form-check-solid me-3">
                                <input class="form-check-input" type="checkbox" data-kt-check="true" data-kt-check-target="#kt_ecommerce_products_table .form-check-input" value="1">
                                </div>
                                </th> *@
                                <th class="kt-datatable__cell" tabindex="0">Takım</th>
                                <th class="kt-datatable__cell" tabindex="0">Takım Lideri</th>
                                <th class="kt-datatable__cell" tabindex="0">Oluşturan</th>
                                <th class="kt-datatable__cell" tabindex="0">Oluşturulma Tarihi</th>
                                <th class="kt-datatable__cell" tabindex="0">Güncelleme</th>
                                <th class="kt-datatable__cell" tabindex="0">Güncelleme Tarihi</th>
                                <th class="kt-datatable__cell">Aksiyonlar</th>
                            </tr>
                        </thead>
                        <tbody class="fw-semibold text-gray-600">

                            @foreach (var user in Model.TeamModel)
                            {
                                <tr>
                                    @* 										<td>
                                <div class="form-check form-check-sm form-check-custom form-check-solid">
                                <input class="form-check-input" type="checkbox" value="1">
                                </div>
                                </td> *@
                                    <!--FOTO-->

                                    <td>@user.TeamName</td>
                                    <td>@user.TeamLead</td>
                                    <td>@user.CreatedName</td>
                                    <td>@user.CreatedDate.ToString("dd.mm.yyyy")</td>
                                    <td>@user.UpdatedName</td>
                                    <td>@user.UpdatedDate</td>

                                    <!--Actions-->
                                    <td>
                                        <a href="#" class="btn btn-sm btn-light btn-flex btn-center btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                            Aksiyonlar
                                            <i class="ki-duotone ki-down fs-5 ms-1"></i>
                                        </a>
                                        <!--begin::Menu-->
                                        <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
                                            <!--begin::Menu item-->
                                            <div class="menu-item px-3">
                                                <a asp-page="UserEdit" asp-route-Id="@user.Id" class="menu-link px-3">Düzenle</a>
                                            </div>
                                            <!--end::Menu item-->
                                            <!--begin::Menu item-->
                                            <form id="deleteForm" asp-page-handler="DeleteUser" method="post">
                                                <input type="hidden" name="Id" id="deleteUserId" />
                                                <div class="menu-item px-3">
                                                    <a href="#" class="menu-link px-3" onclick="confirmDelete('@user.Id')" data-kt-ecommerce-product-filter="delete_row">Sil</a>
                                                </div>
                                            </form>
                                            <!--end::Menu item-->
                                        </div>
                                        <!--end::Menu-->
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
            <!--end::Table-->
        </div>
        <!--end::Card body-->
    </div>
    <!--end::Products-->
</div>

@section Scripts {
    <script src="~/assets/js/Pages/Users.js"></script>
    <script src="~/assets/js/custom/apps/ecommerce/catalog/products.js"></script>

}
@section Styles {
    <style>
        #kt_ecommerce_products_table_filter {
            display: none;
        }

        .dt-buttons.btn-group.flex-wrap {
            margin-bottom: 15px;
        }
    </style>

}